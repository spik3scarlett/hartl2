
<div class="container">
  <div class="jumbotron">
    <h2>What can you see in the picture?</h2>
    <div class="row">
      <div class="col-sm-8">
        <%= image_tag("losuj_obrazek/"+$nr_obrazka, class: 'img-fluid') %>
      </div>
      <div class="col-sm-4">

        <%= form_tag(method: "get", url: '/check') do %>
          <%= label_tag(:slowko, "I can see a...:") %>
          <%= text_field_tag(:slowko) %>
          <%= submit_tag("Check it out!") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
